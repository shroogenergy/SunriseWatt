    <script>
        function calcEfficiency() {
            const eff = parseFloat(document.getElementById("efficiencyTool").value);
            const area = parseFloat(document.getElementById("areaTool").value);
            if (isNaN(eff) || isNaN(area)) {
                document.getElementById("resultEfficiency").innerText = "Please enter valid numbers.";
                return;
            }
            const output = area * (eff / 100);
            document.getElementById("resultEfficiency").innerText = "Effective Output Area: " + output.toFixed(2) + " units.";
        }

        function calcOutput() {
            const irr = parseFloat(document.getElementById("irradiance").value);
            const area = parseFloat(document.getElementById("area").value);
            const eff = parseFloat(document.getElementById("efficiency").value);
            if (isNaN(irr) || isNaN(area) || isNaN(eff)) {
                document.getElementById("resultOutput").innerText = "Please fill all fields.";
                return;
            }
            const outputWatts = irr * area * (eff / 100);
            const outputKWhPerDay = (outputWatts * 5) / 1000;
            document.getElementById("resultOutput").innerText = "Estimated Daily Output: " + outputKWhPerDay.toFixed(2) + " kWh/day";
        }
    </script>
